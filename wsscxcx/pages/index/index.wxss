/* 全局样式 */
page {
    background-color: #f7f7f7;
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  }
  
  /* 轮播图样式 */
  swiper {
    width: 100%;
    height: 350rpx;
    background-color: #f5f5f5;
  }
  
  swiper image {
    width: 100%;
    height: 100%;
  }
  
  /* 导航区域样式 */
  .nav-scroll {
    white-space: nowrap;
    width: 100%;
    padding: 20rpx 0;
    background-color: #fff;
  }
  
  .nav-container {
    display: inline-flex;
  }
  
  .nav-item {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    width: 150rpx;
    padding: 0 10rpx;
  }
  
  .nav-item image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
  }
  
  .nav-text {
    font-size: 24rpx;
    color: #333;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
  }
  
  /* 商品区域样式 */
  .goods-section {
    margin-top: 20rpx;
    background-color: #fff;
    padding: 0 20rpx;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .section-more {
    font-size: 26rpx;
    color: #999;
  }
  
  .goods-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  .goods-card {
    width: 345rpx;
    margin-bottom: 30rpx;
    border-radius: 12rpx;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .goods-image {
    width: 100%;
    height: 345rpx;
  }
  
  .goods-info {
    padding: 20rpx;
  }
  
  .goods-name {
    font-size: 28rpx;
    color: #333;
    line-height: 1.4;
    margin-bottom: 15rpx;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
  
  .price-section {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .current-price {
    font-size: 32rpx;
    color: #ff2d51;
    font-weight: bold;
  }
  
  .original-price {
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
    margin-left: 10rpx;
  }
  
  .goods-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .sales {
    font-size: 24rpx;
    color: #999;
  }
  
  .like-container {
    display: flex;
    align-items: center;
  }
  
  /* 加载状态样式 */
  .loading-status {
    padding: 40rpx 0;
    text-align: center;
    color: #999;
    font-size: 26rpx;
  }
  
  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .loading-gif {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 15rpx;
  }
  
  .no-more {
    color: #ccc;
  }
  
  .empty-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 80rpx 0;
  }
  
  .empty-list image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    opacity: 0.6;
  }
  
  /* 响应式调整 */
  @media (max-width: 375px) {
    .goods-card {
      width: 48%;
    }
    
    .goods-image {
      height: 200rpx;
    }
  }
  .cart-btn {
    padding: 10rpx 20rpx;
    color: #333;
    font-size: 28rpx;
    border: 1rpx solid #ddd;
    border-radius: 30rpx;
    display: inline-block;
  }