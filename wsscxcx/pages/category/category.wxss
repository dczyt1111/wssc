/* 分类页面容器 */
.category-container {
  display: flex;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 左侧导航 */
.nav-scroll {
  width: 180rpx;
  height: 100%;
  background-color: #f8f8f8;
}

.nav-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  overflow: hidden;
}

.nav-item.active {
  color: #ff4d4f;
  font-weight: bold;
  background-color: #fff;
}

.nav-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 6rpx;
  height: 40rpx;
  background-color: #ff4d4f;
}

/* 右侧内容 */
.content-scroll {
  flex: 1;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.category-banner {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

/* 子分类 */
.sub-categories {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 0;
}

.sub-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.sub-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.sub-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 商品列表 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
}

.goods-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 48%;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.goods-image {
  width: 100%;
  height: 300rpx;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
  padding: 0 10rpx 10rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}