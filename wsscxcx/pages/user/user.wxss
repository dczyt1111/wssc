/* 用户信息区域 */
.user-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #ff4d4f;
  color: #fff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255,255,255,0.5);
}

.avatar image {
  width: 100%;
  height: 100%;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.level, .tips {
  font-size: 24rpx;
  opacity: 0.8;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
}

.arrow image {
  width: 100%;
  height: 100%;
}

/* 订单状态 */
.order-status {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.order-status .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
}

.view-all {
  font-size: 26rpx;
  color: #999;
}

.status-list {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 20%;
}

.status-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.status-item text {
  font-size: 24rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: 10rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 20rpx;
}

/* 功能列表 */
.function-list {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item .left {
  display: flex;
  align-items: center;
}

.function-item .left image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-item .left text {
  font-size: 28rpx;
  color: #333;
}

.function-item .arrow {
  width: 30rpx;
  height: 30rpx;
}